<Window x:Class="CA2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CA2"
        mc:Ignorable="d"
        
        Loaded="Window_Loaded"
        
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Label Content="Authors" HorizontalAlignment="Left" Height="35" Margin="34,25,0,0" VerticalAlignment="Top" Width="120" FontSize="14" FontWeight="Bold" Background="White" Foreground="Red"/>
        <Label Content="Books" HorizontalAlignment="Left" Height="35" Margin="242,25,0,0" VerticalAlignment="Top" Width="120" FontSize="14" FontWeight="Bold" Background="White" Foreground="Red"/>
        <ListBox Name="listboxAuthors" HorizontalAlignment="Left" Height="178" Margin="34,67,0,0" VerticalAlignment="Top" Width="168" SelectionChanged="listboxAuthors_SelectionChanged"/>
        <ListBox Name="listboxBooks" HorizontalAlignment="Left" Height="178" Margin="242,67,0,0" VerticalAlignment="Top" Width="256"/>
        <Button Name="buttonSortAZ" Content="A - Z" HorizontalAlignment="Left" Height="32" Margin="34,267,0,0" VerticalAlignment="Top" Width="59" Click="buttonSortAZ_Click"/>
        <Button Name="buttonSortZA" Content="Z - A" HorizontalAlignment="Left" Height="32" Margin="143,267,0,0" VerticalAlignment="Top" Width="59" Click="buttonSortZA_Click"/>
        <TextBox Name="Searchbox" VerticalContentAlignment="Center"  HorizontalAlignment="Left" Height="32" Margin="242,267,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="183" TextChanged="Searchbox_TextChanged" FontSize="14"/>
        <Button Name="buttonSearch" Content="Search" HorizontalAlignment="Left" Height="32" Margin="439,267,0,0" VerticalAlignment="Top" Width="59" Click="buttonSearch_Click"/>

    </Grid>
</Window>
